      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div align="center">
    <i class="material-icons large">group_work</i>
  </div>
  <div align="center", text-align="center", class="field">
    <%= f.label :name %>
