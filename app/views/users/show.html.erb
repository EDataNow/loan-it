<p id="notice"><%= notice %></p>

<p align="center">
  <strong>Email:</strong>
  <h3 align="center"><%= @user.email %></h3>
</p>
<p align="center">
  <strong>Name:</strong>
  <h3 align="center"><%= @user.name %></h3>
</p>
<% unless @user.image.blank? %>
	<p>
	  <strong>Image:</strong>
	  <%= image_tag @user.image.thumb.url %>
	</p>
<% end %>

<div align="center">
	<%= link_to 'Edit', edit_user_path(@user) %> |
	<%= link_to 'Back', users_path %>
</div>
