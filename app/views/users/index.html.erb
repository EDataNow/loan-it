<h1>All Users</h1>
<% @users.group_by(&:user_email).each do |email, users| %>

	<h3> <%= email %> </h3>

	<table>
		<thead>
			<tr>
			<th>Device Name</th>
			<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% users.each do |user| %>
			<tr>
			  <th><%= user.devicename %></th>
			  <th><%= link_to "Edit", edit_user_path(user) %></th>
				<th><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></th>
			</tr>
			<% end %>
		</tbody>
  </table>
<% end %>

<p><%= link_to "New User", new_user_path %></p>

<%= link_to 'Back to Devices', devices_path %>