 <h1>All Users</h1>
<% @users.group_by(&:user_email).each do |email, users| %>

	<h3> <%= email %> </h3>

	<% users.each do |user| %>
		<table>
			<thead>
				<tr>
				<th>Device Name</th>
				<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% user.devices.each do |device| %>
					<tr>
						<td> <%= device.name %> </td>
					  <td><%= link_to "Edit", edit_device_path(device) %></td>
						<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
	  </table>
	<% end %>
<% end %>

<p><%= link_to "New User", new_user_path %></p>

<%= link_to 'Back to Devices', devices_path %>