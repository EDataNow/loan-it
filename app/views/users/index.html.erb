 <h1 align="center", class="z-depth-5">All Users</h1>
<% @users.group_by(&:user_email).each do |email, users| %>


	<h3 align="center", class="card-panel  light-blue lighten-2"> <%= email %> </h3>

	<% users.each do |user| %>
   	<h5 align="center", class="card-panel  light-blue lighten-4"><%= user.name %> </h5>
   	<div align="center">
		  <%= link_to "Edit", edit_user_path(user) %> |
		  <%= link_to "Show", user_path(user) %>
	  </div>
	  <div> </div>
		<table class="highlight centered bordered card-panel light-blue lighten-5 spacer10">
			<thead>
				<tr>
				<% if user.devices.present? %>
				<th>Device Name</th>
				<th colspan="3"></th>
				<% else %>
				<th> No Device Loaned</th>
				<% end %>
				</tr>
			</thead>

			<tbody>
				<% user.devices.each do |device| %>
					<tr>
						<td> <%= device.name %> </td>
					  <td><%= link_to "Edit", edit_device_path(device) %></td>
					  <td><%= link_to "Show Loan History", device_loans_path(device) %></td>
					</tr>
				<% end %>
			</tbody>
	  </table>
	  <div class="divider"></div>
	<% end %>
<% end %>
<div align="center">
	<%= link_to "New User", new_user_path %> |

	<%= link_to 'Back to Devices', devices_path %>
</div>