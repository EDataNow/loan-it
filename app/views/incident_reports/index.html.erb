<p id="notice"><%= notice %></p>

<h1>Incident Reports</h1>

<table>
  <thead>
    <tr>
      <th>Loanee</th>
      <th>Description</th>
      <th>Useable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incident_reports.reverse.each do |incident_report| %>
      <tr>
        <td><%= incident_report.name %></td>
        <td><%= incident_report.description %></td>
        <td><%= incident_report.useable %></td>
        <% if incident_report.useable == false %>
        <td><%= link_to 'Device fixed/replaced?', [@device, incident_report], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Incident Report', new_device_incident_report_path(@device) %>
<%= link_to 'Back to Devices', devices_path %>
