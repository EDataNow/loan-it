<p id="notice"><%= notice %></p>

<h1>Loans</h1>
<h2><%= @device.name %></h2>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Signature</th>
      <th>Device ID</th>
   
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.description %></td>
        <td><%= loan.signature %></td>
        <td><%= loan.device_id %></td>
        <td><%= loan.created_at %></td>
        <td><%= link_to 'Destroy', [@device, loan], method: :delete, data: { confirm: 'Relinquish Device?' } %></td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>




<br>

<%= link_to 'Back to devices', devices_path %>

